<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="moz">
    <title>Document</title>
</head>
<body>
    @{
        string[] stringArr = {"Hello", "World!", "I", "am", "Computer-Tron,", "your", "computer-y", "overlord!"};
        for(var i=0; i< stringArr.Length; i++)
        {
            if(Char.ToLower(stringArr[i][0]) == 'c')
            {
                <span style="color:red">@stringArr[i]</span>
            }
            else
            {
                <span>@stringArr[i]</span>
            }
        }
    }
</body>
</html>